<%- include header %>
<ul class="archive">
<% var lastYear = 0 %>
<% posts.forEach(function (post, index) { %>
  <% if(lastYear != post.createtime.year) { %>
    <li><h3><%= post.createtime.year %></h3></li>
  <% lastYear = post.createtime.year } %>
    <li><time><%= post.createtime.day %></time></li>
    <li><a href="/u/<%= post.name %>/<%= post.createtime.day %>/<%= post.title %>"><%= post.title %></a></li>
<% }) %>
</ul>
<%- include footer %>