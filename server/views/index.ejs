<%- include header %>
<% posts.forEach(function (post, index) { %>
  <p><h2 class="index-title"><a  href="/p/<%= post._id %>"><%= post.title %></a></h2></p>
  <p class="info"> 
    日期：<%= post.time.minute %> | 
    标签：
    <% post.tags.forEach(function (tag, index) { %>
      <% if (tag) { %>
        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
      <% } %>
    <% }) %>  | 
    阅读：<%= post.pv %> | 
    评论：<%= post.comments.length %>
  </p>
  <p><%- post.post %></p>
<% }) %>
<%- include paging %>
<%- include footer %>